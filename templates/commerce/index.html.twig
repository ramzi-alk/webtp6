{% extends 'base.html.twig' %}

{% block title %}Hello CommerceController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Marketplace ! ✅</h1>

    Voici, la liste des pokemons disponibles à l'achat :
    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for market_type in market_pokemons %}
                <tr>
                    <td>{{ market_type.pokemon}}</td>
                    <td>{{ market_type.salePrice}}</td>
                    <td>
                        <a href="{{ path('confirm_purchase', {'id': market_type.getId()}) }}">acheter</a>

                    
                </td>
                    
                </tr>

            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
    </table>
    
</div>
{% endblock %}
