{% extends 'base.html.twig' %}

{% block title %}PokemonType{% endblock %}

{% block body %}
    <h1>PokemonType</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Nom</th>
                <td>{{ pokemon_type.nom }}</td>
            </tr>
            <tr>
                <th>Evolution</th>
                <td>{{ pokemon_type.evolution ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Starter</th>
                <td>{{ pokemon_type.starter ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TypeCourbeNiveau</th>
                <td>{{ pokemon_type.typeCourbeNiveau }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>100</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('market') }}">back to list</a>
    <span>|</span>
    <a href="{{ path('pokemon_type_edit', {'id': pokemon_type.id}) }}">buy</a>

    

  
{% endblock %}
